<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".HomeActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center_horizontal"
        android:text="Create Profile"
        android:textAlignment="center"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="20sp" />

    <androidx.cardview.widget.CardView
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:cardPreventCornerOverlap="false"
        app:cardCornerRadius="75dp"
        android:layout_marginBottom="30dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/iv_cp"
            android:background="@drawable/ic_personnew"
            android:clickable="true"
            android:scaleType="fitCenter" />

    </androidx.cardview.widget.CardView>

    <EditText
        android:id="@+id/et_name_cp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:drawableLeft="@drawable/ic_personnew"
        android:drawablePadding="10dp"
        android:hint="Enter Your Full Name"
        android:padding="10dp"
        android:textColor="@android:color/black" />

    <EditText
        android:id="@+id/et_profession_cp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:drawableLeft="@drawable/ic_worknew"
        android:drawablePadding="10dp"
        android:hint="Enter your Profession"
        android:padding="10dp"
        android:textColor="@android:color/black" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Your Email"
        android:id="@+id/et_email_cp"
        android:layout_margin="4dp"
        android:drawableLeft="@drawable/ic_emailnew"
        android:drawablePadding="10dp"
        android:padding="10dp"
        android:textColor="@android:color/black"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Your contact Number"
        android:id="@+id/et_cno_cp"
        android:layout_margin="4dp"
        android:drawableLeft="@drawable/ic_contactsnew"
        android:drawablePadding="10dp"
        android:padding="10dp"
        android:textColor="@android:color/black"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Your Linkedin url"
        android:id="@+id/et_linkedin_cp"
        android:layout_margin="4dp"
        android:drawableLeft="@drawable/ic_linknew"
        android:drawablePadding="10dp"
        android:padding="10dp"
        android:textColor="@android:color/black"/>


    <Button
        android:id="@+id/btn_cp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/btn_bg"
        android:backgroundTint="@android:color/holo_blue_light"
        android:text="Save Profile"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/progressbar_cp"/>

</LinearLayout>
